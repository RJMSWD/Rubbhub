import React, { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import { ArrowLeft, Shield, Users, Ticket, Plus, Ban, Check, Trash2, Copy } from 'lucide-react';
import { useAuth, useToast } from '../context';
import { adminApi, InviteCodeData, UserProfileData } from '../lib/api';

export const AdminPage = () => {
  const navigate = useNavigate();
  const { currentUser, loading: authLoading } = useAuth();
  const { showToast } = useToast();
  const [activeTab, setActiveTab] = useState<'codes' | 'users'>('codes');
  const [inviteCodes, setInviteCodes] = useState<InviteCodeData[]>([]);
  const [users, setUsers] = useState<UserProfileData[]>([]);
  const [loading, setLoading] = useState(true);
  const [newCode, setNewCode] = useState('');

  useEffect(() => {
    document.title = '管理后台 - Rubbish Archive';
  }, []);

  useEffect(() => {
    if (!authLoading && (!currentUser || currentUser.role !== 'admin')) {
      navigate('/', { replace: true });
    }
  }, [authLoading, currentUser, navigate]);

  useEffect(() => {
    if (currentUser?.role === 'admin') {
      fetchData();
    }
  }, [currentUser, activeTab]);

  const fetchData = async () => {
    setLoading(true);
    try {
      if (activeTab === 'codes') {
        const data = await adminApi.getInviteCodes();
        setInviteCodes(data || []);
      } else {
        const data = await adminApi.getUsers();
        setUsers(data || []);
      }
    } catch (err) {
      showToast('加载数据失败', 'error');
    }
    setLoading(false);
  };

  const handleCreateCode = async () => {
    if (!newCode.trim()) {
      showToast('请输入邀请码', 'error');
      return;
    }

    try {
      await adminApi.createInviteCode(newCode.trim());
      showToast('邀请码创建成功', 'success');
      setNewCode('');
      fetchData();
    } catch (err) {
      showToast('创建失败', 'error');
    }
  };

  const handleToggleCode = async (id: string, currentActive: boolean) => {
    try {
      await adminApi.toggleInviteCode(id, !currentActive);
      showToast(currentActive ? '邀请码已禁用' : '邀请码已启用', 'success');
      fetchData();
    } catch (err) {
      showToast('操作失败', 'error');
    }
  };

  const handleDeleteCode = async (id: string) => {
    try {
      await adminApi.deleteInviteCode(id);
      showToast('邀请码已删除', 'success');
      fetchData();
    } catch (err) {
      showToast('删除失败', 'error');
    }
  };

  const handleToggleBan = async (userId: string, currentBanned: boolean) => {
    if (userId === currentUser?.id) {
      showToast('不能封禁自己', 'error');
      return;
    }

    try {
      await adminApi.toggleBan(userId, !currentBanned);
      showToast(currentBanned ? '用户已解封' : '用户已封禁', 'success');
      fetchData();
    } catch (err) {
      showToast('操作失败', 'error');
    }
  };

  const copyToClipboard = (text: string) => {
    navigator.clipboard.writeText(text);
    showToast('已复制到剪贴板', 'success');
  };

  if (authLoading || !currentUser || currentUser.role !== 'admin') {
    return (
      <div className="min-h-screen bg-amber-50 flex items-center justify-center">
        <div className="text-xl font-black">加载中...</div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-amber-50 font-sans p-6">
      <div className="max-w-4xl mx-auto">
        <button
          onClick={() => navigate('/')}
          className="group flex items-center font-black text-black mb-6 hover:-translate-x-1 transition-transform"
        >
          <div className="bg-white border-2 border-black p-2 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] group-hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] mr-3 transition-all">
            <ArrowLeft size={20} />
          </div>
          返回首页
        </button>

        <div className="bg-white border-4 border-black p-8 shadow-[12px_12px_0px_0px_rgba(0,0,0,1)]">
          <h1 className="text-3xl font-black mb-8 flex items-center uppercase">
            <Shield className="mr-4 text-black" size={32} />
            <span className="bg-red-500 text-white px-3 py-1">管理后台</span>
          </h1>

          {/* Tabs */}
          <div className="flex gap-2 mb-6">
            <button
              onClick={() => setActiveTab('codes')}
              className={`flex items-center gap-2 px-6 py-3 font-black border-2 border-black transition-all ${
                activeTab === 'codes'
                  ? 'bg-yellow-300 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]'
                  : 'bg-white hover:bg-gray-100'
              }`}
            >
              <Ticket size={20} />
              邀请码管理
            </button>
            <button
              onClick={() => setActiveTab('users')}
              className={`flex items-center gap-2 px-6 py-3 font-black border-2 border-black transition-all ${
                activeTab === 'users'
                  ? 'bg-yellow-300 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]'
                  : 'bg-white hover:bg-gray-100'
              }`}
            >
              <Users size={20} />
              用户管理
            </button>
          </div>

          {/* Content */}
          {loading ? (
            <div className="text-center py-12 font-bold">加载中...</div>
          ) : activeTab === 'codes' ? (
            <div className="space-y-6">
              {/* Create new code */}
              <div className="flex gap-3">
                <input
                  type="text"
                  value={newCode}
                  onChange={(e) => setNewCode(e.target.value)}
                  placeholder="输入新邀请码..."
                  className="flex-1 border-2 border-black p-3 font-bold focus:outline-none focus:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]"
                />
                <button
                  onClick={handleCreateCode}
                  className="bg-green-500 text-white px-6 py-3 font-black border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-y-1 hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] transition-all flex items-center gap-2"
                >
                  <Plus size={20} />
                  创建
                </button>
              </div>

              {/* Codes list */}
              <div className="space-y-3">
                {inviteCodes.length === 0 ? (
                  <div className="text-center py-8 text-gray-500 font-bold border-2 border-dashed border-gray-300">
                    暂无邀请码
                  </div>
                ) : (
                  inviteCodes.map((code) => (
                    <div
                      key={code.id}
                      className={`flex items-center justify-between p-4 border-2 border-black ${
                        code.is_active ? 'bg-green-50' : 'bg-gray-100'
                      }`}
                    >
                      <div className="flex items-center gap-4">
                        <button
                          onClick={() => copyToClipboard(code.code)}
                          className="font-mono font-bold text-lg bg-white px-3 py-1 border border-black hover:bg-yellow-100 flex items-center gap-2"
                        >
                          {code.code}
                          <Copy size={14} />
                        </button>
                        <span className={`text-xs font-bold px-2 py-1 ${
                          code.is_active ? 'bg-green-500 text-white' : 'bg-gray-500 text-white'
                        }`}>
                          {code.is_active ? '有效' : '已禁用'}
                        </span>
                        {code.used_by && (
                          <span className="text-xs font-bold text-gray-500">
                            已被使用
                          </span>
                        )}
                      </div>
                      <div className="flex gap-2">
                        <button
                          onClick={() => handleToggleCode(code.id, code.is_active)}
                          className={`p-2 border-2 border-black font-bold ${
                            code.is_active ? 'bg-gray-200 hover:bg-gray-300' : 'bg-green-200 hover:bg-green-300'
                          }`}
                          title={code.is_active ? '禁用' : '启用'}
                        >
                          {code.is_active ? <Ban size={16} /> : <Check size={16} />}
                        </button>
                        <button
                          onClick={() => handleDeleteCode(code.id)}
                          className="p-2 border-2 border-black bg-red-200 hover:bg-red-300"
                          title="删除"
                        >
                          <Trash2 size={16} />
                        </button>
                      </div>
                    </div>
                  ))
                )}
              </div>
            </div>
          ) : (
            <div className="space-y-3">
              {users.length === 0 ? (
                <div className="text-center py-8 text-gray-500 font-bold border-2 border-dashed border-gray-300">
                  暂无用户
                </div>
              ) : (
                users.map((user) => (
                  <div
                    key={user.id}
                    className={`flex items-center justify-between p-4 border-2 border-black ${
                      user.is_banned ? 'bg-red-50' : 'bg-white'
                    }`}
                  >
                    <div className="flex items-center gap-4">
                      <div className="w-10 h-10 bg-blue-500 border-2 border-black flex items-center justify-center font-black text-white">
                        {(user.username || '用户').charAt(0).toUpperCase()}
                      </div>
                      <div>
                        <div className="font-black">{user.username || '用户'}</div>
                        <div className="text-xs text-gray-500">
                          {new Date(user.created_at || Date.now()).toLocaleDateString()}
                        </div>
                      </div>
                      {user.role === 'admin' && (
                        <span className="text-xs font-bold bg-red-500 text-white px-2 py-1">
                          管理员
                        </span>
                      )}
                      {user.is_banned && (
                        <span className="text-xs font-bold bg-gray-800 text-white px-2 py-1">
                          已封禁
                        </span>
                      )}
                    </div>
                    {user.id !== currentUser.id && user.role !== 'admin' && (
                      <button
                        onClick={() => handleToggleBan(user.id, user.is_banned)}
                        className={`px-4 py-2 border-2 border-black font-bold flex items-center gap-2 ${
                          user.is_banned
                            ? 'bg-green-200 hover:bg-green-300'
                            : 'bg-red-200 hover:bg-red-300'
                        }`}
                      >
                        {user.is_banned ? <Check size={16} /> : <Ban size={16} />}
                        {user.is_banned ? '解封' : '封禁'}
                      </button>
                    )}
                  </div>
                ))
              )}
            </div>
          )}
        </div>
      </div>
    </div>
  );
};
